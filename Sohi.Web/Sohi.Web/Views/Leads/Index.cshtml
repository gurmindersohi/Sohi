@model IEnumerable<Sohi.Web.Models.Leads.Leads>

@{
    ViewBag.Title = "Leads List";
}

<h1>Leads</h1>

<table id="example" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.FullName</td>
                <td>@lead.Email</td>
                <td>@lead.IsActive</td>
            </tr>
        }
    </tbody>
</table>

