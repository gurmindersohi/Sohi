@model SendEmailViewModel



@{
    Layout = "~/Views/Email/_Header.cshtml";
}



<div class="container-fluid m-0" style="max-width: 1000px;">

    <div class="card">
        <div class="card-header">
            Compose Email
        </div>
        <div class="card-body">

            <div class="col-md-12">
                <form method="post">


                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="LeadsFilter" data-bs-toggle="dropdown" aria-expanded="false">
                            Filter leads to send mass emails
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="LeadsFilter">
                            <li><a class="dropdown-item" asp-controller="Leads" asp-action="GetLeads">All Leads</a></li>
                            <li><a class="dropdown-item" href="#">This Month</a></li>
                            <li><a class="dropdown-item" href="#">Last Month</a></li>
                            <li><a class="dropdown-item" href="#">Custom Date</a></li>
                        </ul>
                    </div>

                    <br />

                    <div class="form-group">
                        <br />
                        <label for="txtTo">To</label>

                        @{
                            var emails = "";

                            if (Model != null)
                            {
                                emails = Model.To;
                            }
                        }

                        <input asp-for="To" type="text" class="form-control" id="txtTo" value="@Html.Raw(emails)" />


                    </div>

                    <br />

                    <div class="form-group">
                        <label for="txtBcc">Cc</label>
                        <input asp-for="Cc" type="text" class="form-control" id="txtBcc" />
                    </div>

                    <br />

                    <div class="form-group">
                        <label for="txtBcc">Bcc</label>
                        <input asp-for="Bcc" type="text" class="form-control" id="txtBcc" />
                    </div>

                    <br />


                    <div class="form-group">
                        <label for="txtSubject">Subject</label>
                        <input asp-for="Subject" type="text" class="form-control" id="txtSubject" />
                    </div>

                    <br />

                    <div class="form-group">
                        <label for="txtBody">Description</label>
                        <textarea asp-for="Body" rows="10" class="form-control" id="txtBody"></textarea>
                    </div>
                    <br />

                    <button type="submit" class="btn btn-primary">Send</button>
                </form>

            </div>
        </div>





    </div>

</div>


<script>$(document).ready(function () {
        $("#send").addClass("active");
        $("#emails").addClass("active");
    });
    $('.nav li').click(function () {
        $(this).toggleClass('active').siblings().removeClass('active');
    });</script>
