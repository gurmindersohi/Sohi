@model Sohi.Web.ViewModels.Social.Facebook.PostsViewModel


@{ Layout = "Social"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        .sm {
            text-align: left;
            color: #09132C !important;
            border-bottom: 1px solid #dee2e6 !important;
        }

            .sm:hover {
                color: #D9ECFF !important;
                border: none !important;
                border-bottom: none !important;
                background-color: #D9ECFF !important;
            }

        .sml.active {
            background-color: #D9ECFF !important;
        }
    </style>
</head>
<body>

    <div>

        @if(Model.profiles != null) {

        <div class="row pt-5" style="background-color: #f8f9fa !important;">

            <div class="col-md-12">
                <div class="container-fluid position-fixed" style="z-index:1030;">
                    <div class="row p-0 ps-0 pt-2 pb-1" style="background-color: #f8f9fa !important;">
                        <div class="col-md-10" style="flex-grow: 0;">
                            <ul class="nav nav-tabs" id="tabs" role="tablist">
                                <li class="nav-item" role="presentation" id="queue">
                                    <a class="nav-link" asp-controller="Facebook" asp-action="Queue">Queue</a>
                                </li>
                                <li class="nav-item" role="presentation" id="posts">
                                    <a class="nav-link" asp-controller="Facebook" asp-action="Posts">Posts</a>
                                </li>
                                <li class="nav-item" role="presentation" id="analytics">
                                    <a class="nav-link" asp-controller="Facebook" asp-action="Analytics">Analytics</a>
                                </li>
                                @foreach (var profile in Model.profiles)
                                {
                    <li class="btn-group ms-auto">
                        <button type="button" class="btn btn-light dropdown-toggle pb-0 ps-2 pe-2" style="font-family:Roboto, sans-serif; font-size:14px;" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/img_avatar.png" height="30" width="30" class="rounded-circle" /> @profile.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end pt-0 pb-0">


                            <li class="btn-group w-100 border-bottom-1 me-auto pt-1 pb-1" style="border-bottom:1px solid #dee2e6;">
                                <button type="button" class="btn btn-white pb-0 ps-2 pe-2" style="text-align:left; font-family:Roboto, sans-serif; font-size:14px;" data-bs-toggle="dropdown" aria-expanded="false">
                                    <table>
                                        <tr>
                                            <td class="pt-0">
                                                <img src="@profile.Image" height="30" width="30" class="rounded-circle" /> @profile.Name
                                            </td>
                                            <td>
                                                <span>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </button>
                            </li>
                        </ul>
                    </li>
}
                            </ul>
                        </div>


                    </div>

                </div>
            </div>
        </div>

        <div class="row">



            <div class="col-md-11">
                <div class="container-fluid pt-2">
                    <div class="row pt-5">
                        <div class="wrapper">

                            <div class="content w-100" style="background-color: #f8f9fa!important; min-height: calc(100vh - 0px);">

                                <div class="container-fluid pt-3 ps-0">
                                    <main role="main">
                                        @RenderBody()
                                    </main>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        }

    </div>

    <style>
        .nav > li.active > a {
            color: #0B90FF !important;
            border: none;
            border-bottom: 1px solid #0B90FF !important;
            background: none;
        }

        .nav > li > a:hover {
            color: #0B90FF !important;
            border: none !important;
            border-bottom: 1px solid #0B90FF !important;
        }

        .active {
            border: none !important;
        }

        .nav-tabs .nav-link {
            margin-bottom: -1px;
            background: none;
            border: none !important;
            font-size: 14px;
        }
    </style>

</body>
</html>


