<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>

    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #394452!important;">
                <div class="container-fluid">
                    <a class="navbar-brand px-3" href="#">DC</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btnhome" aria-controls="btnhome" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse px-3" id="btnhome" style="flex-grow: 0!important">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="register">Register</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>


        </header>

        <div class="container-fluid">
            <div class="row" style="height: calc(100vh - 60px);">
                
                        <main role="main" style="height: calc(100vh - 60px);">
                            @RenderBody()
                        </main>

            </div>
        </div>






        @*<footer class="footer mt-auto py-3 bg-light" style="background-color:#313e49!important">
            <div class="container">
                <span class="text-muted">Gurminder Singh Inc 2021 </span>
            </div>
        </footer>*@

        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", required: true);
        }
    </div>

    <script>$("li").click(
            function (event) {
                $('li').removeClass('active');
                $(this).addClass('active');
      
            }
        );</script>
</body>

</html>

